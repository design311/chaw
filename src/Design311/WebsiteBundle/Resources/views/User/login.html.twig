{% extends 'Design311WebsiteBundle::layout.html.twig' %}

{% block content %}
<div class="container">
	<div class="onehalf">
		
		<h1 class="averia">Aanmelden</h1>
		{% if auth != false %}
			<p class="message error">Hiervoor moet je eerst aanmelden</p>
		{% endif %}
		<p>Heb je nog geen account? <a href="{{ path('design311website_register') }}">Maak hier je account aan</a></p>

		{% if error %}
		<div>{{ error.message }}</div>
		{% endif %}
		
		<form action="{{ path('design311website_login_check') }}" method="post" class="loginform">
			<p><label for="username">Gebruikersnaam</label><br>
			<input id="username" type="text" name="_username" value="{{ last_username }}" /></p>
			<p><label for="password">Wachtwoord</label><br>
			<input id="password" type="password" name="_password" /></p>
			<p class="fr"><input type="submit" name="login" value="Aanmelden" /></p>
			<p class="recover"><a href="{{ path('design311website_password_recovery') }}">Wachtwoord of gebruikersnaam vergeten?</a></p>
		</form>
		

	</div>

</div>

{% endblock %}