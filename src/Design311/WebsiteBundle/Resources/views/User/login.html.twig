{% extends 'Design311WebsiteBundle::layout.html.twig' %}

{% block title %}Login{% if auth != false %} vereist{% endif %} - {{parent()}}{% endblock %}
{% block description %}{% spaceless %}
	{% if auth != false %}
		Meld je aan om gebruik te maken van deze functie. Nog geen account? Registreer je snel en word lid van Chaw.
	{% else %}
		Meld je aan om gebruik te maken van alle functies: deelnemen aan dinners, recepten toevoegen aan je winkelwagentje,...
	{% endif %}
{% endspaceless %}{% endblock %}

{% block content %}
<div class="container">
	<div class="onehalf">
		
		<h1 class="averia">Aanmelden</h1>
		{% if auth != false %}
			<p class="message notice">Hiervoor moet je eerst aanmelden</p>
		{% endif %}
		<p>Heb je nog geen account? <a href="{{ path('design311website_register') }}">Maak hier je account aan</a></p>

		{% if error %}
			<p class="error message">{{ error.message|trans({},'messages') }}</p>
		{% endif %}
		
		<form action="{{ path('design311website_login_check') }}" method="post" class="loginform">
			<p><label for="username">Gebruikersnaam</label><br>
			<input id="username" type="text" name="_username" value="{{ last_username }}" /></p>
			<p><label for="password">Wachtwoord</label><br>
			<input id="password" type="password" name="_password" /></p>
			{% if auth == false %}
				<input type="hidden" name="_target_path" value="{{referer}}" />
			{% endif %}
			<p class="fr"><input type="submit" name="login" value="Aanmelden" /></p>
			<p class="recover"><a href="{{ path('design311website_password_recovery') }}">Wachtwoord of gebruikersnaam vergeten?</a></p>
		</form>
		

	</div>

</div>

{% endblock %}