{% extends 'Design311WebsiteBundle::layout.html.twig' %}

{% block content %}
<div id="map" class="map"></div>

<div class="content">
	<div class="container">
	{% for dinner in dinners %}
	    {{dinner.menu}}
	    {{dinner.address.lat}}
	    <hr>
	{% endfor %}
	</div>
</div>
{% endblock %}

{% block footer %}
    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
	<script src="{{ asset('bundles/design311website/js/maps.markerclusterer.js') }}"></script>
	<script type="text/javascript">
		var geocoder;
		var map;
		var markers = [];
		var locations = {{ locations|json_encode }}

		function initialize() {
			var center = new google.maps.LatLng(51.2167, 4.4000);

			map = new google.maps.Map(document.getElementById('map'), {
				zoom: 9,
				center: center,
				mapTypeId: google.maps.MapTypeId.ROADMAP
			});
			
			$.each(locations, function(i, item){
					
					var marker = new google.maps.Marker({
							map: map,
							position: new google.maps.LatLng(item[0], item[1])
					});
					markers.push(marker);
				
			})
			var markerCluster = new MarkerClusterer(map, markers);
		}

		google.maps.event.addDomListener(window, 'load', initialize);
	</script>
{% endblock %}